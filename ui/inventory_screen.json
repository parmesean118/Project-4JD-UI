{
  "inventory_container_item/item_cell": {
    "controls": [
      {
        "$background_image_control_name@$background_images": {
          "layer": 1
        }
      },
      {
        "item": {
          "type": "panel",
          "size": "$item_renderer_panel_size",
          "layer": 0,
          "controls": [
            {
              "stack_count_label@$stack_count_control": {
                "layer": 9
              }
            },
            {
              "$item_renderer@$item_renderer": {
                "size": "$item_renderer_size",
                "offset": "$item_renderer_offset",
                "anchor_to": "center",
                "anchor_from": "center",
                "layer": 7
              }
            }
          ]
        }
      },
      {
        "durability_bar@$durability_bar_control": {
          "layer": 8
        }
      },
      {
        "$overlay_image_control_name@$overlay_images": {
          "layer": 9
        }
      }
    ]
  },

  "inventory_screen": {
    "button_mappings": [],
    "$screen_content": "inventory_4jd.inventory_full_screen",
    "$screen_bg_content": "inventory_4jd.inventory_screen_content"
  },

  "crafting_screen": {
    "button_mappings": [],
    "$screen_content": "inventory_4jd.inventory_full_screen",
    "$screen_bg_content": "crafting_4jd.crafting_screen_content"
  }
}